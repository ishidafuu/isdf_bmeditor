<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:isdf_bmeditor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="isdf_bmeditor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="じゃんけんゲーム"
        Width="600"
        Height="400"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.restart">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style Selector="Button.restart:pointerover">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#00E676"/>
        </Style>
        <Style Selector="TextBlock.result">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00E676"/>
        </Style>
        <Style Selector="TextBlock.computer">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FFD700"/>
        </Style>
    </Window.Styles>

    <Border Background="#252526" 
            CornerRadius="16" 
            Margin="20" 
            Padding="30"
            BoxShadow="0 4 8 0 #1A1A1A">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Spacing="40">
            <TextBlock Text="じゃんけん..."
                      FontSize="48"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
            
            <StackPanel Spacing="20">
                <TextBlock Text="{Binding ComputerHand}"
                          Classes="computer"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Result}"
                          Classes="result"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <Panel>
                <!-- じゃんけんの手を選ぶボタン群 -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Spacing="20"
                            IsVisible="{Binding !IsGameOver}">
                    <Button Command="{Binding PlayCommand}"
                            CommandParameter="{x:Static vm:Hand.Rock}">
                        グー
                    </Button>
                    <Button Command="{Binding PlayCommand}"
                            CommandParameter="{x:Static vm:Hand.Scissors}">
                        チョキ
                    </Button>
                    <Button Command="{Binding PlayCommand}"
                            CommandParameter="{x:Static vm:Hand.Paper}">
                        パー
                    </Button>
                </StackPanel>

                <!-- もう一回ボタン -->
                <Button Command="{Binding RestartCommand}"
                        Classes="restart"
                        IsVisible="{Binding IsGameOver}"
                        HorizontalAlignment="Center">
                    もう一回！
                </Button>
            </Panel>
        </StackPanel>
    </Border>
</Window> 